{
  "compilerOptions": {
    /* === Output Structure === */
    "rootDir": "./src",
    "outDir": "./dist",
    /* === Module / Target === */
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es2022",
    /* === Interop / Module Syntax === */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    /* === Type & Library Settings === */
    "lib": ["esnext", "dom"],
    "types": ["node"],
    "skipLibCheck": true,
    /* === Type Checking & Style === */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    /* === Source Maps & Declarations === */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*.ts"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}